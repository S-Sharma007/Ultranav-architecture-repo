 pipeline {
    agent any
    
    tools {
        maven 'maven 3.9.9' 
        jdk 'jdk 17'   
    }
    
    environment {
        Sonar_Token = credentials('SONAR_TOKEN')
        

    }
    
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', 
                url: 'https://github.com/S-Sharma007/Ultranav-architecture-repo.git',
                credentialsId: 'github_creds'  
            }
        }
        
        stage('Petclinic Build with Maven') {
            steps {
                sh 'mvn clean package -DskipTests=true'
                sh 'mvn compile'
                sh 'mvn package'
            }
        }
    }
 }
